<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://unpkg.com/bson@4.4.0/dist/bson.browser.umd.js"></script>
    <style>
        @import url("https://fonts.googleapis.com/css?family=Montserrat&display=swap");

body {
    background-color: #010101;
}

.bg-img {
    background-image: url(https://images.financialexpress.com/2020/11/mac1.jpg);
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;

}

h1 {
    text-align: right;
    border-top-left-radius: 2;
    color: #ffffff;
    background-image: linear-gradient(to right, #c15371 21%, #010101 70%);
    border-radius: 20px;
    padding-right: 30px;
    font-family: Montserrat;
}

.btn-con {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    padding-top: 350px;
}

.btn {
    background-color: transparent;
    background-image: linear-gradient(to right, #c15371 21%, #010101 70%);
    color: #f7f3f3;
    padding: 10px 30px;
    font-size: 20px;
    cursor: pointer;
    text-decoration: none;
    transition: 256ms all;
    border-radius: 25px;
    text-align: 50%;
    font-family: Montserrat;
}

.btn:hover {
    background-color: #1b09bb;
    color: #fff;
    border-color: #f2f2f2;
}

a.btn:hover {
    border: solid;
    border-color: white;
    border-width: 0.1;
}

#title {
    text-align: right;
    color: #ffffff;
    background-image: linear-gradient(to right, #c15371 21%, #010101 70%);
    border-radius: 20px;
    padding-right: 30px;
    font-family: Montserrat;
}

.add-button {
    width: 200px;
    background: #f3f0f1;
    background: #f3f0f1;
    border-radius: 32px;
    cursor: pointer;
    transition: all 0.1s ease-in-out;
    height: 34px;
    background-color: #000000;
    background-image: linear-gradient(to right, #c15371 21%, #010101 70%);
    text-align: center;
    font-family: Montserrat;
}

.add-button:hover {
    color: #c15371;
}

h3 {
    padding-left: 20px;
    color: #000000;
    font-family: Montserrat;
    background-image: linear-gradient(to right, #c15371 21%, #010101 40%);
    border-radius: 8px;
    text-decoration: wavy;
    margin-bottom: 15px;
    margin-left: 35px;
}

.list {
    color: #f2f2f2;
    background-image: linear-gradient(to right, #c15371 20%, #010101 40%);
    margin: 35px;
    font-family: Montserrat;
}

input {
    font-size: 120%;
    color: #0a0a0a;
    background-color: #000000;
    border: 1px solid #faf8f8;
    border-radius: 10px;
    padding: 5px 5px 5px 10px;
    background-repeat: no-repeat;
    background-position: 8px 9px;
    float: left;
    color: rgb(255, 255, 255);
    font-family: Montserrat;
}

input[type="number"] {
    width: 334px !important;
}

input[type="submit"] {
    display: block;
}

form {
    width: 400px;
    size: 30px;
}

label {
    font-family: arial;
    color: #f2f2f2;
    width: 120px;
    display: inline;
    text-align: left;
    padding: 10px 15px 10px 15px;
    float: left;
}

#button {
    border-radius:20px
}

.form-field {
    text-align: center;
    background-image: linear-gradient(to right, #c15371 21%, #010101 70%);
    padding-top: 50px;
}

#main {
    width: 100%;
    margin: 7% auto 0;
}

#form-middle {
    height: 260px;
    display: inline;
    justify-content: center;
    align-items: center;
    text-align: left;
    justify-content: space-evenly;
    flex-direction: row;
    padding-top: 50px;
    margin-top: 40px;

}

#header-title {
    position: relative;
    text-align: right;
    margin: 20px;
}

.inline {
    text-align: right;
    align-items: right;

}

#form-right {
    background-image: linear-gradient(to right, #c15371 11%, #010101 70%);
    float: right;
    position: inline;
    border-radius: 20px;
    padding-left: 14px;
}

.list {
    color: #000000;
    border-radius: 20px;
    line-height: 30px;
}

.add-header {
    padding-right: 210px;
    color: #fff8f8;
    font-family: Montserrat;
    text-align: right;
    border-radius: 8px;
    margin-left: 35px;
}

.frame {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    border-radius: 10px;
    padding: 10px;
    border-bottom: groove;
    border-color: white;
    border-width: 0.2;

}

.btn-header {
    height: 25px;
    width: 25px;
    border-radius: 10px;
    background: #e0e5ec;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-tap-highlight-color: transparent;
    box-shadow:
        -7px -7px 20px 0px #c15371,
        -4px -4px 5px 0px #fff9,
        7px 7px 20px 0px #0002,
        4px 4px 5px 0px #0001,
        inset 0px 0px 0px 0px #fff9,
        inset 0px 0px 0px 0px #0001,
        inset 0px 0px 0px 0px #fff9, inset 0px 0px 0px 0px #0001;
    transition: box-shadow 0.6s cubic-bezier(.79, .21, .06, .81);
    font-size: 16px;
    color: rgba(42, 52, 84, 1);
    text-decoration: none;
    padding: 4.5px;
    margin-left: 14px;

}

.btn-header:active {
    box-shadow: 4px 4px 6px 0 rgba(255, 255, 255, .5),
        -4px -4px 6px 0 rgba(116, 125, 136, .2),
        inset -4px -4px 6px 0 rgba(255, 255, 255, .5),
        inset 4px 4px 6px 0 rgba(116, 125, 136, .3);
}

.form-sec {
    padding-top: 20px;
}


#add-header {
    padding: 20px;
}




.footer {
display: flex;
flex-flow: row wrap;
padding: 30px 30px 20px 30px;
color: #2f2f2f;
background-color: #fff;
border-top: 1px solid #e5e5e5;
}

.footer > * {
flex:  1 100%;
}

.footer__addr {
margin-right: 1.25em;
margin-bottom: 2em;
}

.footer__logo {
font-family: 'Pacifico', cursive;
font-weight: 400;
text-transform: lowercase;
font-size: 1.5rem;
}

.footer__addr h2 {
margin-top: 1.3em;
font-size: 15px;
font-weight: 400;
}

.nav__title {
font-weight: 400;
font-size: 15px;
}

.footer address {
font-style: normal;
color: #999;
}

.footer__btn {
display: flex;
align-items: center;
justify-content: center;
height: 36px;
max-width: max-content;
background-color: rgb(33, 33, 33, 0.07);
border-radius: 100px;
color: #2f2f2f;
line-height: 0;
margin: 0.6em 0;
font-size: 1rem;
padding: 0 1.3em;
}

.footer ul {
list-style: none;
padding-left: 0;
}

.footer li {
line-height: 2em;
}

.footer a {
text-decoration: none;
}

.footer__nav {
display: flex;
flex-flow: row wrap;
}

.footer__nav > * {
flex: 1 50%;
margin-right: 1.25em;
}

.nav__ul a {
color: #999;
}

.nav__ul--extra {
column-count: 2;
column-gap: 1.25em;
}

.legal {
display: flex;
flex-wrap: wrap;
color: #999;
}

.legal__links {
display: flex;
align-items: center;
}

.heart {
color: #2f2f2f;
}

@media screen and (min-width: 24.375em) {
.legal .legal__links {
margin-left: auto;
}
}

@media screen and (min-width: 40.375em) {
.footer__nav > * {
flex: 1;
}

.nav__item--extra {
flex-grow: 2;
}

.footer__addr {
flex: 1 0px;
}

.footer__nav {
flex: 2 0px;
}
}
    </style>
